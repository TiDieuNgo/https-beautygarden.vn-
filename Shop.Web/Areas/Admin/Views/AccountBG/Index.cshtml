@{
    ViewBag.Title = "Tài khoản quản trị";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using PagedList.Mvc
@model PagedList.IPagedList<Shop.Model.Account298>
<div id="page-wrapper" style="min-height: 407px;">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Thành viên quản trị</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading" style="color: red;">
                    <a href="/admin/AccountBG/add/">
                        <button type="button" class="btn btn-success">Thêm mới</button>
                    </a>
                </div>
                <div class="panel-body">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                        <div class="row">
                            <div class="col-sm-12">
                                <table width="100%" class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline" id="dataTables-example" role="grid" aria-describedby="dataTables-example_info" style="width: 100%;">
                                    <thead>
                                        <tr role="row">
                                            <th>Họ tên</th>
                                            <th>Tên đăng nhập</th>
                                            <th>Email</th>
                                            <th>Chức năng</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null)
                                        {
                                            foreach (var tag in Model)
                                            {
                                                <tr class="gradeU odd" role="row">
                                                    <td>@tag.Fullname</td>
                                                    @* <td>
                                                        <img src="@string.Format("/Upload{0}", sanPham.Img)"  style="width:30px;height:30px;"/></td>*@
                                                    <td class="center">@tag.Username</td>
                                                    <td class="center">@tag.Email</td>
                                                    <td class="actions">
                                                        <a title="Sửa" href="/admin/AccountBG/edit/@tag.id_" class="btn">
                                                            <i class="fa fa-edit"></i>
                                                        </a>
                                                        <a title="Xóa" onclick="return xoa(@tag.id_)" href="#" class="btn">
                                                            <i class="fa fa-trash-o"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function xoa(f) {
        var r = confirm("Bạn có muốn xóa không?");
        if (r) {
            location.href = "/admin/AccountBG/Delete/" + f;
        }
    }
</script>

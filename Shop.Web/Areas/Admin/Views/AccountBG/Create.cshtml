@{
    ViewBag.Title = "Thêm mới account";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model Shop.Web.Areas.Admin.Models.ThemAccountModel
@using (Html.BeginForm("Addnew", "AccountBG", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div id="page-wrapper" style="min-height: 407px;">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Account BeautyGarden</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading" style="color: #337ab7;">
                        Thêm account mới
                    </div>
                    <style>
                        .redText {
                            color: red;
                        }
                    </style>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-9">
                                <form role="form">
                                    <div class="form-group">
                                        <label class="col-sm-2 ">Tên đăng nhập</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(o => o.Username, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(o => o.Username, "", new { @class = "redText" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 ">Mật khẩu</label>
                                        <div class="col-sm-10">
                                            @Html.PasswordFor(o => o.Password, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(o => o.Password, "", new { @class = "redText" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 ">Họ và tên</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(o => o.Fullname, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(o => o.Fullname, "", new { @class = "redText" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 ">Email</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(o => o.Email, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(o => o.Email, "", new { @class = "redText" })
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-success" style="margin-left: 151px;">Lưu</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
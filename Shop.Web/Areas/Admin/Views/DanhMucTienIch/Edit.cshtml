@{
    ViewBag.Title = "Sửa danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model Shop.Model.DanhMucTienIch
@using (Html.BeginForm("SaveEdit", "DanhMucTienIch", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.HiddenFor(o=>o.id_)
     <div id="page-wrapper" style="min-height: 407px;">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header" style="margin: 20px 0 5px;">Danh mục tiện ích</h3>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading" style="color: #337ab7;">
                        Thêm danh mục tiện ích
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-9">
                                <form role="form">
                                    <div class="form-group">
                                     
                                       
                                        <label class="col-sm-2 " style="color: #337ab7">Tên danh mục</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(o => o.TenDanhMuc, new { @class = "form-control" })
                                          
                                        </div>
                                        <style>
                                            .redText {
                                                color: red;
                                            }
                                        </style>
                                    </div>
                                   
                                    <div class="form-group">
                                        <label class="col-sm-2 " style="color: #337ab7;">
                                            Icon danh mục
                                            <br />
                                            <span style="color: green;">(25 x 25 px)</span>
                                        </label>
                                        <div class="col-sm-8">
                                            @Html.TextBoxFor(o => o.IconDanhMuc, new { @class = "form-control" })
                                          
                                        </div>
                                        <div class="col-sm-2">
                                            <button onclick="return BrowseImages('IconDanhMuc');" type="button" class="btn btn-primary">Upload icon</button>

                                        </div>
                                    </div>
                                    
                                  
                                     <div class="form-group">
                                        <label class="col-sm-2 " style="color: #337ab7;">Vị trí</label>
                                        <div class="col-sm-2">
                                            @Html.TextBoxFor(o => o.SapXep, new { @class = "form-control" })
                                          
                                        </div>

                                    </div>
                                    <button type="submit" class="btn btn-success" style="margin-left: 151px;">Lưu</button>
                                </form>
                            </div>

                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
   
}




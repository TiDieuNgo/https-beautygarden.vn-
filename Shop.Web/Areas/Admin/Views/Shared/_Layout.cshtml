        function BrowseImages(id) {
            elementId = id;
            var finder = new CKFinder();
            finder.basePath = '/Content/ckfinder/';
            finder.selectActionFunction = SetFileField;
            finder.popup();
        }
        function SetFileField(fileUrl) {
            $("#" + elementId).val(fileUrl.replace("/Upload", ""));
        }


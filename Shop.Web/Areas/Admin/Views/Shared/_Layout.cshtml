            filebrowserImageUploadUrl:
                '/content/ckfinder/core/connector/aspx/connector.aspx?command=QuickUpload&type=Images',
            filebrowserFlashUploadUrl: '/content/ckfinder/core/connector/aspx/connector.aspx?command=QuickUpload&type=Flash'
        };
        function InstanceCkeditor() {
            try {
                var dt = $('#' + elementForEditorInstance).val();
                editor = CKEDITOR.replace(elementForEditorInstance, ckoptions);
                editor.setData(dt);

                //
                var dt1 = $('#' + elementForEditorInstance1).val();
                editor1 = CKEDITOR.replace(elementForEditorInstance1, ckoptions);
                editor1.setData(dt1);
                //
                var dt2 = $('#' + elementForEditorInstance2).val();
                editor2 = CKEDITOR.replace(elementForEditorInstance2, ckoptions);
                editor2.setData(dt2);
                //
                var dt3 = $('#' + elementForEditorInstance3).val();
                editor3 = CKEDITOR.replace(elementForEditorInstance3, ckoptions);
                editor3.setData(dt3);
                //
                //
                var dt4 = $('#' + elementForEditorInstance4).val();
                editor4 = CKEDITOR.replace(elementForEditorInstance4, ckoptions);
                editor4.setData(dt4);
            } catch (e) {
            }
        }

        function validateNumber(event) {

            var key = window.event ? event.keyCode : event.which;
            if (event.keyCode == 8
             || event.keyCode == 37 || event.keyCode == 39) {
                return true;
            }
            else if (key < 48 || key > 57) {
                return false;
            }
            else return true;
        };
    </script>



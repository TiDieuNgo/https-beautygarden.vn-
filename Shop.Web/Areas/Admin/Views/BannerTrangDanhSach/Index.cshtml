@{
    ViewBag.Title = "Banner trang danh sách";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<Shop.Model.BannerDanhSach>
<div id="page-wrapper" style="min-height: 407px;">
    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-header" style="margin: 20px 0 5px;">Banner trang danh sách</h3>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading" style="color: green;">
                    <a href="/admin/BannerTrangDanhSach/add/">
                        <button type="button" class="btn btn-success">Thêm mới</button></a>
                        <div class="col-sm-7" style="float: right;">
                        <div id="dataTables-example_filter" class="dataTables_filter">
                            <label class="col-sm-2" style="margin-top: 10px;">
                                Xem banner theo:
                            </label>
                            <div class="col-sm-5" style="margin-left: 13px;">
                                <select class="form-control" onchange="changetypePromotion(this.value)">
                                    @if (Convert.ToInt32(ViewData["sx"].ToString()) == 1)
                                    {
                                      
                                        <option value="1" selected="">Trang điểm</option>
                                        <option value="2">Chăm sóc da</option>
                                        <option value="3">Chăm Sóc Tóc</option>
                                        <option value="4">Phụ Kiện</option>
                                        <option value="5">Thực phẩm chức năng</option>
                                        <option value="6">Nước Hoa</option>
                                        <option value="7">Body Care</option>
                                    }
                                    else if(Convert.ToInt32(ViewData["sx"].ToString()) == 2)
                                    {
                                        <option value="1">Trang điểm</option>
                                        <option value="2" selected="">Chăm sóc da</option>
                                        <option value="3">Chăm Sóc Tóc</option>
                                        <option value="4">Phụ Kiện</option>
                                        <option value="5">Thực phẩm chức năng</option>
                                        <option value="6">Nước Hoa</option>
                                        <option value="7">Body Care</option>
                                    }
                                    else if(Convert.ToInt32(ViewData["sx"].ToString()) == 3)
                                    {
                                        <option value="1">Trang điểm</option>
                                        <option value="2">Chăm sóc da</option>
                                        <option value="3" selected="">Chăm Sóc Tóc</option>
                                        <option value="4">Phụ Kiện</option>
                                        <option value="5">Thực phẩm chức năng</option>
                                        <option value="6">Nước Hoa</option>
                                        <option value="7">Body Care</option>
                                    }
                                     else if(Convert.ToInt32(ViewData["sx"].ToString()) == 4)
                                    {
                                        <option value="1">Trang điểm</option>
                                        <option value="2">Chăm sóc da</option>
                                        <option value="3">Chăm Sóc Tóc</option>
                                        <option value="4" selected="">Phụ Kiện</option>
                                        <option value="5">Thực phẩm chức năng</option>
                                        <option value="6">Nước Hoa</option>
                                        <option value="7">Body Care</option>
                                    }
                                    else if(Convert.ToInt32(ViewData["sx"].ToString()) == 5)
                                    {
                                        <option value="1">Trang điểm</option>
                                        <option value="2">Chăm sóc da</option>
                                        <option value="3">Chăm Sóc Tóc</option>
                                        <option value="4" >Phụ Kiện</option>
                                        <option value="5" selected="">Thực phẩm chức năng</option>
                                        <option value="6">Nước Hoa</option>
                                        <option value="7">Body Care</option>
                                    }
                                     else if(Convert.ToInt32(ViewData["sx"].ToString()) == 6)
                                    {
                                        <option value="1">Trang điểm</option>
                                        <option value="2">Chăm sóc da</option>
                                        <option value="3">Chăm Sóc Tóc</option>
                                        <option value="4" >Phụ Kiện</option>
                                        <option value="5">Thực phẩm chức năng</option>
                                        <option value="6" selected="">Nước Hoa</option>
                                        <option value="7">Body Care</option>
                                    }
                                     else if(Convert.ToInt32(ViewData["sx"].ToString()) == 7)
                                    {
                                        <option value="1">Trang điểm</option>
                                        <option value="2">Chăm sóc da</option>
                                        <option value="3">Chăm Sóc Tóc</option>
                                        <option value="4" >Phụ Kiện</option>
                                        <option value="5">Thực phẩm chức năng</option>
                                        <option value="6">Nước Hoa</option>
                                        <option value="7" selected="">Body Care</option>
                                    }
                                </select>
                            </div>
                           
                        </div>
                    </div>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">


                        <div class="row">
                            <div class="col-sm-12">
                                <table width="100%" class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline" id="dataTables-example" role="grid" aria-describedby="dataTables-example_info" style="width: 100%;">
                                    <thead>
                                        <tr role="row">
                                            <th >Hình ảnh</th>
                                            <th >Tên banner</th>
                                            <th>Link</th>
                                            <th >Vị trí</th>
                                            <th>Ẩn/hiện?</th>
                                            <th >Chức năng</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null )
                                        {
                                            foreach (var tag in Model)
                                            {
                                            <tr class="gradeU odd" role="row">
                                                <td>
                                                    <img src="@string.Format("/Upload/Files/{0}", tag.HinhAnh)"  style="width:200px;height:100px;text-align: center;"/></td>
                                              
                                                <td class="center">@tag.TenBanner</td>
                                                <td class="center">@tag.LinkHttp1</td>
                                                <td class="center">@tag.ViTri</td>
                                                @if (tag.Ok)
                                                {
                                                    <td class="center" style="text-align: center;">
                                                        <input type="checkbox" checked="checked" value="@tag.id_"/>
                                                      
                                                    </td>
                                                }
                                                else
                                                {
                                                    <td class="center" style="text-align: center;">
                                                        <input type="checkbox" value="@tag.id_"/>
                                                        <span style="color: red; font-weight: normal; float: right; margin-top: 45px;">ẩn

                                                        </span>
                                                       
                                                    </td>
                                                    
                                                }
                                                <td class="actions">
                                                    <a title="Sửa" href="/admin/BannerTrangDanhSach/edit/@tag.id_" class="btn"><i class="fa fa-edit"></i>
                                                    </a>
                                                    <a title="Xóa"  onclick="return xoa(@tag.id_)" href="#" class="btn"><i class="fa fa-trash-o"></i>
                                                    </a>

                                                </td>
                                            </tr>
                                            }
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
    </div>
 </div>
    <script>
        function xoa(f) {
            var r = confirm("Bạn có muốn xóa không?");
            if (r) {
                location.href = "/admin/BannerTrangDanhSach/Delete/" + f;
            }
        }
    </script>
<script type="text/javascript">
    function changetypePromotion(sx) {
        location.href = "/Admin/BannerTrangDanhSach?sx=" + sx;
    }
</script>

<script>
    //update an hien banner trang danh sach
    $("#dataTables-example tr td input").click(function (e) {
        var that = $(this);
        var vlCheck = that.val();
        //alert(vlCheck);
        var url = '/admin/BannerTrangDanhSach/UpdateOk';
        $.post(url, {
            idsanpham: vlCheck,
            checked: that.is(':checked')
        }, function (data) {
            alert("Cập nhật trạng thái thành công!");
        });
    });
</script>
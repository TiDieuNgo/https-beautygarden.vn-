@{
    ViewBag.Title = "Sửa banner mới";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model Shop.Model.BannerKhuyenMai
<script type="text/javascript">
    elementForEditorInstance = "MoTa";
    ckoptions.width = "90%";
    $(function () {
        InstanceCkeditor();
    });
</script>
@using (Html.BeginForm("SaveEdit", "BannerKhuyenMai", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.HiddenFor(o => o.Id)
    <div id="page-wrapper" style="min-height: 407px;">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header" style="margin: 20px 0 5px;">Banner khuyến mãi</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading" style="color: #337ab7;">
                        Thêm Banner mới
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-9">
                                <form role="form">
                                    <style>
                                        .redText {
                                            color: red;
                                        }

                                        .col-sm-2 {
                                            color: #337ab7 !important;
                                        }
                                    </style>
                                    <div class="form-group">
                                        <label class="col-sm-2 ">Tên banner</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(o => o.Ten, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(o => o.Ten, "", new { @class = "redText" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 ">
                                            Hình ảnh
                                            <br />
                                            <span style="color: green;">(870 x 328 px)</span>
                                        </label>
                                        <div class="col-sm-4">
                                            @Html.TextBoxFor(o => o.HinhAnh, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(o => o.HinhAnh, "", new { @class = "redText" })
                                        </div>
                                        <div class="col-sm-2">
                                            <button onclick="return BrowseImages('HinhAnh');" type="button" class="btn btn-primary">Upload ảnh</button>
                                        </div>
                                        <div class="col-sm-4">
                                            <span style="color: red;">
                                                (*)Nên sử dụng tool để nén
                                                <br />
                                                <a href="https://compressor.io/" target="_blank">Click để sử dụng tool nén</a>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 ">Mô tả</label>
                                        <div class="col-sm-10">
                                            @Html.TextAreaFor(o => o.MoTa, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-success" style="margin-left: 151px;">Lưu</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}



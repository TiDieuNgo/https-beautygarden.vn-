@{
    ViewBag.Title = "Sửa danh mục con";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model Shop.Model.DanhMucTienIch
@using (Html.BeginForm("SaveEditSubmenu1", "DanhMucTienIchCon", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.HiddenFor(o => o.id_)
    <div id="page-wrapper" style="min-height: 407px;">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header" style="margin: 20px 0 5px;">Danh mục tiện ích</h3>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading" style="color: #337ab7;">
                        Thêm danh mục tiện ích
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-9">
                                <form role="form">
                                    <div class="form-group">
                                     <label class="col-sm-2 " style="color: #337ab7">Tên danh mục</label>
                                        <div class="col-sm-10">
                                            <input class="form-control" id="TenDanhMuc" name="TenDanhMuc" type="text" value="@Model.TenDanhMuc">
                                        </div>
                                        <style>
                                            .redText {
                                                color: red;
                                            }
                                        </style>
                                    </div>
                                   <div class="form-group">
                                        <label class="col-sm-2 " style="color: #337ab7;">Vị trí</label>
                                        <div class="col-sm-2">
                                           <input class="form-control" id="SapXep" name="SapXep" type="text" value="@Model.SapXep">
                                        </div>

                                    </div>
                                    <button type="button" class="btn btn-success" style="margin-left: 151px;" onclick="return Update()">Lưu</button>
                                </form>
                            </div>

                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
   
}

<script>
    function Update() {
      
        var Tendanhmuc = $('#TenDanhMuc').val();
        var Sapxep = $('#SapXep').val();
        var pathArray = window.location.pathname.split('/admin/DanhMucTienIchCon/Edit/');
        var newPathname = "";
        for (i = 0; i < pathArray.length; i++) {
            newPathname += "";
            newPathname += pathArray[i];//idmenu
        }
       //alert(newPathname);
        $.post("/admin/DanhMucTienIchCon/SaveEditSubmenu1json", {
            IdMenu: newPathname,
            NameProduct: Tendanhmuc,
            IPosition: Sapxep
            }, function (data) {
              
                location.href = "/admin/DanhMucTienIchCon/index/" + data.idcha;
            });
      
    }
</script>


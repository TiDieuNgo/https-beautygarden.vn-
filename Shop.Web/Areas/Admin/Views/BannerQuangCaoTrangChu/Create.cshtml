@{
    ViewBag.Title = "Thêm banner mới";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model Shop.Web.Areas.Admin.Models.ThemBannerTrangChuModel
@using (Html.BeginForm("Addnew", "BannerQuangCaoTrangChu", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div id="page-wrapper" style="min-height: 407px;">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header" style="margin: 20px 0 5px;">Banner quảng cáo trang chủ</h3>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading" style="color: #337ab7;">
                        Thêm Banner mới
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-9">
                                <form role="form">
                                     <style>
                                            .redText {
                                                color: red;
                                            }
                                             .col-sm-2 {
                                                color: #337ab7 !important;
                                            }
                                        </style>
                                    <div class="form-group">
                                        <label class="col-sm-2 ">Tên banner</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(o => o.NameProduct, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(o=>o.NameProduct, "", new { @class = "redText" })
                                        </div>

                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 ">Hình ảnh
                                            <br/>
                                            <span style="color: green;">(1170 x 450 px)</span>
                                        </label>
                                        <div class="col-sm-8">
                                            @Html.TextBoxFor(o => o.Img, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(o=>o.Img, "", new { @class = "redText" })
                                        </div>
                                        <div class="col-sm-2">
                                            <button onclick="return BrowseImages('Img');" type="button" class="btn btn-primary">Upload ảnh</button>

                                        </div>
                                    </div>
                                     <div class="form-group">
                                        <label class="col-sm-2 ">Link</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(o => o.LinkHttp1, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 ">Vị trí</label>
                                        <div class="col-sm-2">
                                            @Html.TextBoxFor(o => o.sPosition, new { @class = "form-control" })
                                             @Html.ValidationMessageFor(o=>o.sPosition, "", new { @class = "redText" })
                                        </div>

                                    </div>
                                    <button type="submit" class="btn btn-success" style="margin-left: 151px;">Lưu</button>
                                </form>
                            </div>

                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
   
}



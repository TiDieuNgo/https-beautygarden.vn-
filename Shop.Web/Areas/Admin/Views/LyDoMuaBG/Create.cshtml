@{
    ViewBag.Title = "Tại sao nên mua tại BG?";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    elementForEditorInstance = "NoiDung";
   ckoptions.width = "90%";
    $(function () {
        InstanceCkeditor();

    });
</script>
@model Shop.Web.Areas.Admin.Models.LyDoMuaBGModel
@using (Html.BeginForm("Addnew", "LyDoMuaBG", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div id="page-wrapper" style="min-height: 407px;">
        <div class="row">
            <div class="col-lg-12">
                 <h3 class="page-header" style="margin: 20px 0 5px;">Lý do mua tại Beauty Garden</h3>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading" style="color: #337ab7;">
                        Thêm mới
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-9">
                                <form role="form">
                                     <style>
                                            .redText {
                                                color: red;
                                            }
                                             .col-sm-2 {
                                                color: #337ab7 !important;

                                            }
                             #cke_ContentTaiSao
                                {
                                    width: 820px !important;
                                }
                                        </style>
                                    <div class="form-group">
                                        <label class="col-sm-2 ">Tiêu đề</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(o => o.TieuDe, new { @class = "form-control" })
                                             @Html.ValidationMessageFor(o=>o.TieuDe, "", new { @class = "redText" })
                                        </div>

                                    </div>
                                  
                                    <div class="form-group">
                                        <label class="col-sm-2 ">Nội dung </label>
                                        <div class="col-sm-10">
                                            @Html.TextAreaFor(o => o.NoiDung)
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-success" style="margin-left: 151px;">Lưu</button>
                                </form>
                            </div>

                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
   
}

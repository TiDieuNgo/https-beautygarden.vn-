@{
    ViewBag.Title = "Lý do mua tại Beauty Garden";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model IList<Shop.Model.ThietLap>
<div id="page-wrapper" style="min-height: 407px;">
    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-header" style="margin: 20px 0 5px;">Lý do mua tại Beauty Garden</h3>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                @*<div class="panel-heading" style="color: #337ab7;">
                    <a href="/admin/LyDoMuaBG/add/">
                        <button type="button" class="btn btn-success">Thêm mới</button></a>
                </div>*@
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">


                        <div class="row">
                            <div class="col-sm-12">
                                <table width="100%" class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline" id="dataTables-example" role="grid" aria-describedby="dataTables-example_info" style="width: 100%;">
                                    <thead>
                                        <tr role="row">
                                            <th>Tiêu đề</th>
                                        
                                         
                                            <th>Chức năng</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null)
                                        {
                                            foreach (var tag in Model)
                                            {
                                            <tr class="gradeU odd" role="row">
                                               
                                                <td><a href="#">@tag.TieuDe</a></td>

                                            
                                              
                                                <td class="actions">
                                                    <a title="Sửa" href="/admin/LyDoMuaBG/edit/@tag.ThietLapId" class="btn"><i class="fa fa-edit"></i>
                                                    </a>
                                                    <a title="Xóa"  onclick="return xoa(@tag.ThietLapId)" href="#" class="btn"><i class="fa fa-trash-o"></i>
                                                    </a>

                                                </td>
                                            </tr>
                                            }
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                      

                        <!-- /.table-responsive -->

                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
    </div>
</div>
<script>
    function xoa(f) {
        var r = confirm("Bạn có muốn xóa không?");
        if (r) {
            location.href = "/admin/LyDoMuaBG/Delete/" + f;
        }
    }
</script>


@{
    ViewBag.Title = "Redirect 301";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model Shop.Model.Redirect301
@using (Html.BeginForm("SaveEdit", "RedirectLink", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.HiddenFor(o=>o.Redirect301Id)
    <div id="page-wrapper" style="min-height: 407px;">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header" style="margin: 20px 0 5px;">Redirect 301</h3>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading" style="color: #337ab7;">
                        Redirect 301
                    </div>
                    <style>
                        .redText
                        {
                            color: red;
                        }

                        .col-sm-2
                        {
                            color: #337ab7 !important;
                        }
                    </style>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-9">
                                <form role="form">
                                    <div class="form-group">
                                        <label class="col-sm-2 ">
                                            Link cũ
                                        </label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(o => o.LinkCu, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(o => o.LinkCu, "", new { @class = "redText" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 ">
                                            Link mới
                                        </label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(o => o.LinkMoi, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(o => o.LinkMoi, "", new { @class = "redText" })
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-success" style="margin-left: 151px;">Lưu</button>
                                </form>
                            </div>
                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
   
}



@{
    ViewBag.Title = "Sửa danh mục con";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model Shop.Model.Menu
@using (Html.BeginForm("SaveEditSubmenu1", "SubMenu1", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.HiddenFor(o => o.id_)
    <div id="page-wrapper" style="min-height: 407px;">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Danh mục sản phẩm</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <style>
            .col-sm-2
            {
                color: #337ab7 !important;
            }
        </style>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading" style="color: red;">
                        Sửa danh mục sản phẩm
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-9">
                                <form role="form">
                                    <div class="form-group">
                                        <label class="col-sm-2 ">Tên Danh mục</label>
                                        <div class="col-sm-10">
                                            <input class="form-control" id="NameProduct" name="NameProduct" type="text" value="@Model.NameProduct">
                                        </div>

                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 ">Title (SEO)<span style="color: red;">(*)</span></label>
                                        <div class="col-sm-10">
                                            <input class="form-control" id="SEOtitle" name="SEOtitle" type="text" value="@Model.SEOtitle">
                                        </div>

                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 ">Description (SEO)<span style="color: red;">(*)</span></label>
                                        <div class="col-sm-10">
                                            <input class="form-control" id="SEODescription" name="SEODescription" type="text" value="@Model.SEODescription">
                                        </div>

                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 ">Vị trí</label>
                                        <div class="col-sm-2">
                                            <input class="form-control" id="SapxepDanhMuc" name="SapxepDanhMuc" type="text" value="@Model.SapxepDanhMuc">
                                        </div>

                                    </div>
                                 
                                    <button type="button" class="btn btn-success" style="margin-left: 151px;" onclick="return Update()">Cập nhật</button>
                                </form>
                            </div>

                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
   
}

<script>
    function Update() {
        //var idcha = $('#idsanpham').val();
        //alert(idcha);
        var Tendanhmuc = $('#NameProduct').val();
        var Sapxep = $('#SapxepDanhMuc').val();
        var SEOtitle = $('#SEOtitle').val();
        var SEODescription = $('#SEODescription').val();
        var pathArray = window.location.pathname.split('/admin/SubMenu1/edit/');
        var newPathname = "";
        for (i = 0; i < pathArray.length; i++) {
            newPathname += "";
            newPathname += pathArray[i];//idmenu
        }
        //alert(newPathname);
        $.post("/admin/SubMenu1/SaveEditSubmenu1json", {
            IdMenu: newPathname,
            NameProduct: Tendanhmuc,
            IPosition: Sapxep,
            SEODescription: SEODescription,
            SEOtitle: SEOtitle
            }, function (data) {
                location.href = "/admin/Submenu1/index/" + data.idcha;
            });
      
    }
</script>


@{
    ViewBag.Title = "Sửa mã vạch không có gì";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@model Shop.Model.MenuOption
@using (Html.BeginForm("SaveEditMVMau", "MaVach", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.HiddenFor(o=>o.id_)
    <div id="page-wrapper" style="min-height: 407px;">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Mã vạch</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <style>
             .col-sm-2 {
                                                color: #337ab7 !important;
                                            }
        </style>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading" style="color: red;">
                        Sửa mã vạch màu
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-9">
                                <form role="form">
                                    <div class="form-group">
                                        <label class="col-sm-2 ">Tên sản phẩm</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(o => o.NameProduct, new { @class = "form-control" })
                                        </div>

                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 ">Mã vạch</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(o => o.Barcode, new { @class = "form-control" })
                                        </div>

                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 ">Tên màu</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(o => o.TenLoai, new { @class = "form-control" })
                                        </div>

                                    </div>
                                      <div class="form-group">
                                        <label class="col-sm-2 ">Ảnh màu</label>
                                        <div class="col-sm-8">
                                            @Html.TextBoxFor(o => o.Img, new { @class = "form-control" })

                                        </div>
                                        <div class="col-sm-2">
                                            <button onclick="return BrowseImages('Img');" type="button" class="btn btn-primary">Upload ảnh</button>

                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-success" style="margin-left: 151px;">Cập nhật</button>
                                </form>
                            </div>

                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
   
}



@{
    ViewBag.Title = "Sửa tin tức";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model Shop.Model.DetailMenu
@using (Html.BeginForm("SaveEdit", "TinTuc", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.HiddenFor(o => o.id_)
    <div id="page-wrapper" style="min-height: 407px;">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header" style="margin: 20px 0 5px;">Tin tức</h3>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <style>
            .col-sm-2 {
                color: #337ab7 !important;
            }
        </style>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading" style="color:  #337ab7;">
                        Sự kiện khuyến mãi & Bí quyết làm đẹp
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-9">
                                <form role="form">
                                    <div class="form-group">
                                        <label class="col-sm-2 ">
                                            Tiêu đề
                                            <br />
                                            <span style="color: red;"> (tối đa 45 kí tự)</span>
                                        </label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(o => o.Name, new { @class = "form-control" })
                                        </div>

                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 ">
                                            Title (SEO)
                                            <br />
                                            <span style="color: green; font-weight: normal;">(tối đa 60 kí tự)</span>
                                        </label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(o => o.SEOtitle, new { @class = "form-control", @maxlength = "60" })
                                            @Html.ValidationMessageFor(o => o.SEOtitle, "", new { @class = "redText" })
                                        </div>

                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 ">
                                            Description (SEO)
                                            <br />
                                            <span style="color: green; font-weight: normal;">(tối đa 155 kí tự)</span>
                                        </label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(o => o.SEODescription, new { @class = "form-control", @maxlength = "155" })
                                            @Html.ValidationMessageFor(o => o.SEODescription, "", new { @class = "redText" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 ">
                                            Hình ảnh
                                            <br />
                                            <span style="color: red;"> (345 x 230 px)</span>
                                        </label>
                                        <div class="col-sm-8">
                                            @Html.TextBoxFor(o => o.Img, new { @class = "form-control" })

                                        </div>
                                        <div class="col-sm-2">
                                            <button onclick="return BrowseImages('Img');" type="button" class="btn btn-primary">Upload ảnh</button>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 ">Nội dung tóm tắt</label>
                                        <div class="col-sm-10">
                                            @Html.TextAreaFor(o => o.Note, new { @class = "form-control" })
                                        </div>

                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 ">Chi tiết bài viết</label>
                                        <div class="col-sm-10">
                                            @Html.TextAreaFor(o => o.Content, new { @class = "ckeditor" })
                                        </div>

                                    </div>
                                    <button type="submit" class="btn btn-success" style="margin-left: 151px;">Lưu</button>
                                </form>
                            </div>
                            <style>
                                #cke_Content {
                                    width: 820px !important;
                                }
                            </style>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}



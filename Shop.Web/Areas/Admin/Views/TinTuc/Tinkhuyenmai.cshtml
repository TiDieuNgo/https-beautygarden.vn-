@{
    ViewBag.Title = "Tin khuyến mãi";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using PagedList.Mvc
@model PagedList.IPagedList<Shop.Model.DetailMenu>
<div id="page-wrapper" style="min-height: 407px;">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Tin tức</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading" style="color:  #337ab7;">
                   <a href="/admin/tinkhuyenmai/add/">
                        <button type="button" class="btn btn-success">Thêm mới</button></a>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                        <div class="row">
                            <div class="col-sm-12">
                                <table width="100%" class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline" id="dataTables-example" role="grid" aria-describedby="dataTables-example_info" style="width: 100%;">
                                    <thead>
                                        <tr role="row">
                                            <th style="width: 204.2px;">Tiêu đề </th>
                                           <th style="width: 80px;">Hình ảnh</th>
                                            <th style="width: 204.2px;">Mô tả</th>
                                            <th style="width: 106px;">Chức năng</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null )
                                        {
                                            foreach (var tag in Model)
                                            {
                                            <tr class="gradeU odd" role="row">
                                                <td>@tag.Name</td>
                                           
                                               <td>
                                                    <img src="@string.Format("https://beautygarden.vn/Files/{0}", tag.Img)"  style="width:100px;height:100px;"/></td>

                                                  <td class="center">@tag.Note</td>
                                                <td class="actions">
                                                    <a title="Sửa" href="/admin/tintuc/edit/@tag.id_" class="btn"><i class="fa fa-edit"></i>
                                                    </a>
                                                    <a title="Xóa"  onclick="return xoa(@tag.id_)" href="#" class="btn"><i class="fa fa-trash-o"></i>
                                                    </a>

                                                </td>
                                            </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                </div>
                                <div class="col-sm-6">
                                    @Html.PagedListPager(Model, page => Url.Action("TinKhuyenMai", new { page }))
                                </div>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
 </div>
    <script>
        function xoa(f) {
            var r = confirm("Bạn có muốn xóa không?");
            if (r) {
                location.href = "/admin/tintuc/tinkhuyenmai/Delete/" + f;
            }
        }
    </script>

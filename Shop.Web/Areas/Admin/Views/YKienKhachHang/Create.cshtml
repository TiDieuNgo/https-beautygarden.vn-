@{
    ViewBag.Title = "Thêm mới ý kiến khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model Shop.Web.Areas.Admin.Models.YKienKhachHangModel
@using (Html.BeginForm("Addnew", "YKienKhachHang", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div id="page-wrapper" style="min-height: 407px;">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header">Ý kiến khách hàng</h3>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading" style="color: #337ab7;">
                        Thêm mới
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-9">
                                <form role="form">
                                     <style>
                                            .redText {
                                                color: red;
                                            }
                                             .col-sm-2 {
                                                color: #337ab7 !important;
                                            }
                                        </style>
                                    <div class="form-group">
                                        <label class="col-sm-2 ">Tên khách hàng</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(o => o.TenKhachHang, new { @class = "form-control" })
                                             @Html.ValidationMessageFor(o=>o.TenKhachHang, "", new { @class = "redText" })
                                        </div>

                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 ">Hình đại diện
                                          <br />
                                        <span style="color: green;">(60 x 60px)</span>
                                        </label>
                                        <div class="col-sm-8">
                                            @Html.TextBoxFor(o => o.HinhDaiDien, new { @class = "form-control" })
                                             @Html.ValidationMessageFor(o=>o.HinhDaiDien, "", new { @class = "redText" })
                                        </div>
                                           <div class="col-sm-2">
                                               <button onclick="return BrowseImages('HinhDaiDien');" type="button" class="btn btn-primary">Upload ảnh</button>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 ">Link FaceBook</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(o => o.LinkFaceBook, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(o=>o.LinkFaceBook, "", new { @class = "redText" })
                                        </div>
                                    </div>
                                     <div class="form-group">
                                         <label class="col-sm-2 ">Mô tả
                                           <br />
                                        <span style="color: green;">(Tối đa 160 kí tự)</span>
                                         </label>
                                        <div class="col-sm-10">
                                            @Html.TextAreaFor(o => o.MoTa, new { @class = "form-control" })
                                             @Html.ValidationMessageFor(o=>o.MoTa, "", new { @class = "redText" })
                                        </div>
                                       </div>
                                    <button type="submit" class="btn btn-success" style="margin-left: 151px;">Lưu</button>
                                </form>
                            </div>

                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
   
}

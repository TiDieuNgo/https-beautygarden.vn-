@{
    ViewBag.Title = "Chi tiết đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model Shop.Web.Areas.Admin.Models.OrderModel
<div id="page-wrapper" style="min-height: 407px;">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Chi tiết đơn hàng</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading" style="color: red;">
                    <a href="/admin/donhang/" class="fa fa-mail-reply"> Quay lại đơn hàng</a>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">


                        <div class="row">
                            <div class="col-sm-12">
                                <table width="100%" class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline" id="dataTables-example" role="grid" aria-describedby="dataTables-example_info" style="width: 100%;">
                                    <thead>
                                        <tr>
                                            <td colspan="2" style="font-weight: bold; color: #2d86ca; font-size: 16px;">THÔNG TIN KHÁCH HÀNG</td>
                                        </tr>
                                        <tr>
                                            <td class="first">Họ Tên: </td>
                                            <td>@Model.DonHang.Name</td>
                                        </tr>

                                        <tr>
                                            <td>Địa chỉ: </td>
                                            <td>@Model.DonHang.GiaoHang</td>
                                        </tr>
                                        <tr>
                                            <td>Email: </td>
                                            <td>@Model.DonHang.HuongDanSuDung</td>
                                        </tr>
                                        <tr>
                                            <td>Số Điện Thoại: </td>
                                            <td>@Model.DonHang.Link</td>
                                        </tr>
                                       
                                    </thead>
                                    <tbody>
                                        @if (Model != null && Model.ChiTietDonHangs.Any())
                                        {
                                            foreach (var donHang in Model.ChiTietDonHangs)
                                            {
                                                decimal tien = 0;
                                                tien = Convert.ToDecimal(donHang.Price);
                                                decimal soluong = Convert.ToDecimal(donHang.Number);
                                                decimal tongtien = 0;
                                                tongtien = soluong*tien;
                                                
                                            <tr>
                                                <td>
                                                    <img src="@string.Format("/Upload/Files/{0}", donHang.Img)"  style="width:50px;height:50px;"/></td>
                                                <td>@donHang.Name</td>
                                                <td>@string.Format("{0:#,##,###}", tien)₫</td>
                                                <td>x @donHang.Number</td>
                                                <td>= @((string.Format("{0:#,#.##}", tongtien)))đ</td>
                                            </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>


                        <!-- /.table-responsive -->

                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
    </div>
</div>
<script>
    function xoa(f) {
        var r = confirm("Bạn có muốn xóa không?");
        if (r) {
            location.href = "/admin/donhang/Delete/" + f;
        }
    }
</script>


@{
    ViewBag.Title = "Thêm danh mục sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    elementForEditorInstance = "MoTaDanhMuc";
    ckoptions.width = "90%";
    $(function () {
        InstanceCkeditor();
    });
</script>
@model Shop.Web.Areas.Admin.Models.ThemDanhMucModel
@using (Html.BeginForm("Addnew", "DanhMucSanPham", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div id="page-wrapper" style="min-height: 407px;">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header" style="margin: 20px 0 5px;">Danh mục sản phẩm</h3>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading" style="color: #337ab7;">
                        Thêm danh mục sản phẩm
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-9">
                                <form role="form">
                                    <div class="form-group">
                                        <label class="col-sm-2 " style="color: #337ab7;">Tên danh mục</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(o => o.NameProduct, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(o=>o.NameProduct, "", new { @class = "redText" })
                                        </div>
                                        <style>
                                            .redText {
                                                color: red;
                                            }
                                            #cke_MoTaDanhMuc
                                            {
                                                width: 820px !important;
                                            }
                                        </style>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2">Title (SEO)<span style="color: red;">(*)</span><br/>
                                            <span style="color: green;">(tối đa 60 kí tự)</span> </label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(o => o.SEOtitle, new { @class = "form-control", type = "text", required = "nhap ten san pham", @maxlength = "60" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2">Description (SEO)<span style="color: red;">(*)</span> <br />
                                            <span style="color: green;">(Tối đa 160 kí tự)</span> </label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(o => o.SEODescription, new { @class = "form-control", type = "text", required = "nhap ten san pham", @maxlength = "155" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 " style="color: #337ab7;">
                                            Hình ảnh
                                            <br />
                                            <span style="color: green;">(187 x 375 px)</span>
                                        </label>
                                        <div class="col-sm-4">
                                            @Html.TextBoxFor(o => o.Img, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(o=>o.Img, "", new { @class = "redText" })
                                        </div>
                                        <div class="col-sm-2">
                                            <button onclick="return BrowseImages('Img');" type="button" class="btn btn-primary">Upload ảnh</button>

                                        </div>
                                          <div class="col-sm-4">
                                         <span style="color: red;"> (*)Nên sử dụng tool để nén
                                             <br/>
                                             <a href="https://compressor.io/" target="_blank">Click để sử dụng tool nén</a>
                                         </span>
                                    </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 " style="color: #337ab7;">
                                            Icon danh mục
                                            <br />
                                            <span style="color: green;">(25 x 25 px)</span>
                                        </label>
                                        <div class="col-sm-4">
                                            @Html.TextBoxFor(o => o.IconMenu, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(o=>o.IconMenu, "", new { @class = "redText" })
                                        </div>
                                        <div class="col-sm-2">
                                            <button onclick="return BrowseImages('IconMenu');" type="button" class="btn btn-primary">Upload icon</button>

                                        </div>
                                          <div class="col-sm-4">
                                         <span style="color: red;"> (*)Nên sử dụng tool để nén
                                             <br/>
                                             <a href="https://compressor.io/" target="_blank">Click để sử dụng tool nén</a>
                                         </span>
                                    </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 " style="color: #337ab7;">
                                            Bannner danh mục
                                            <br />
                                        
                                        </label>
                                        <div class="col-sm-4">
                                            @Html.TextBoxFor(o => o.BannerDanhMuc, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(o=>o.BannerDanhMuc, "", new { @class = "redText" })
                                        </div>
                                        <div class="col-sm-2">
                                            <button onclick="return BrowseImages('BannerDanhMuc');" type="button" class="btn btn-primary">Upload banner</button>

                                        </div>
                                          <div class="col-sm-4">
                                         <span style="color: red;"> (*)Nên sử dụng tool để nén
                                             <br/>
                                             <a href="https://compressor.io/" target="_blank">Click để sử dụng tool nén</a>
                                         </span>
                                    </div>
                                    </div>
                                    <div class="form-group">
                                    <label class="col-sm-2 " style="color: #337ab7">Mô tả danh mục</label>
                                        <div class="col-sm-10">
                                            @Html.TextAreaFor(o => o.MoTaDanhMuc, new { @class = "form-control" })
                                      </div>
                                       
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 " style="color: #337ab7;">Chức năng</label>
                                        <div class="col-sm-10">
                                            <div class="hot"></div>

                                            <label class="checkbox-inline">
                                                @Html.CheckBoxFor(o => o.ShowMenuTop) Menu Top 
                                            </label>



                                            <label class="checkbox-inline">
                                                @Html.CheckBoxFor(o => o.ShowMenuHome) Menu Home 
                                            </label>

                                        </div>
                                    </div>
                                     <div class="form-group">
                                        <label class="col-sm-2 " style="color: #337ab7;">Vị trí</label>
                                        <div class="col-sm-2">
                                            @Html.TextBoxFor(o => o.SapxepDanhMuc, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(o=>o.SapxepDanhMuc, "", new { @class = "redText" })
                                        </div>

                                    </div>
                                    <button type="submit" class="btn btn-success" style="margin-left: 151px;">Lưu</button>
                                </form>
                            </div>

                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
   
}




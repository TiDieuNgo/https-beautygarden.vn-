@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<Shop.Model.User>
<a href="/admin/User/add/" class="btn btn-primary" style="margin-bottom:10px;">Thêm mới</a>
<div class="row-fluid" id="main-content-row">
    <div class="span12">
        <h2><i class="glyphicon-more-windows"></i>User</h2>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Họ Tên</th>
                    <th>Tên Đăng Nhập</th>
                    <th>Ngày Tạo</th>
                    <th>Trạng Thái</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var User in Model)
                    {
                        <tr>
                            <td>@User.Email</td>
                            <td>@User.HoTen</td>
                            <td>@User.TenDangNhap</td>
                            <td>@User.NgayTao.ToShortDateString()</td>
                            <td>@(User.TrangThai ? "Nam" : "Nữ")</td>
                            <td class="actions">
                                <a title="Sửa" href="/admin/User/edit/@User.UserId" class="btn">
                                    <i class="glyphicon-conversation"></i>
                                </a><a title="Xóa" href="/admin/user/delete/@User.UserId" class="btn">
                                    <i class="glyphicon-remove-2"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

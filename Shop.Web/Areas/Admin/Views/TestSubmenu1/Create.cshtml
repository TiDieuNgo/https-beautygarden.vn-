

@model Shop.Model.Menu
@using (Html.BeginForm("Addnew", "TestSubmenu1", FormMethod.Post, new { @class = "form-horizontal" }))
{
   <div id="page-wrapper" style="min-height: 407px;">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Danh mục sản phẩm</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading" style="color: red;">
                        Thêm danh mục con sản phẩm
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-9">
                                <form role="form">
                                    <div class="form-group">
                                        <label class="col-sm-2 ">Tên Danh mục</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(o => o.NameProduct, new { @class = "form-control" })
                                        </div>

                                    </div>
                                      <div class="form-group">
                                        <label class="col-sm-2 ">Chức năng</label>
                                        <div class="col-sm-10">
                                            <div class="hot"></div>

                                            <label class="checkbox-inline">
                                                @Html.CheckBoxFor(o => o.ShowMenuTop) Menu sub Top 
                                            </label>



                                            <label class="checkbox-inline">
                                                @Html.CheckBoxFor(o => o.ShowMenuHome) Menu sub Home 
                                            </label>

                                        </div>
                                    </div>
                                     <div class="form-group">
                                        <label class="col-sm-2 ">Sắp xếp</label>
                                        <div class="col-sm-2">
                                            @Html.TextBoxFor(o => o.SapxepDanhMuc, new { @class = "form-control" })
                                        </div>

                                    </div>
                                    <button type="submit" class="btn btn-success" style="margin-left: 151px;">Lưu</button>
                                </form>
                            </div>

                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
   
}

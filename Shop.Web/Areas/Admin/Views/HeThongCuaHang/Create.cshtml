@{
    ViewBag.Title = "Thêm hệ thống cửa hàng mới mới";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model Shop.Web.Areas.Admin.Models.HeThongCuaHangModel
@using (Html.BeginForm("Addnew", "HeThongCuaHang", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div id="page-wrapper" style="min-height: 407px;">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header" style="margin: 20px 0 5px;">Hệ thống cửa hàng</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading" style="color: #337ab7;">
                        Thêm hệ thống cửa hàng mới
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-9">
                                <form role="form">
                                     <style>
                                            .redText {
                                                color: red;
                                            }
                                             .col-sm-2 {
                                                color: #337ab7 !important;
                                            }
                                        </style>
                                    <div class="form-group">
                                        <label class="col-sm-2 ">Hình ảnh
                                            <br/>
                                            <span style="color: green;">(536 x 356 px)</span>
                                        </label>
                                        <div class="col-sm-4">
                                            @Html.TextBoxFor(o => o.HinhAnh, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(o=>o.HinhAnh, "", new { @class = "redText" })
                                        </div>
                                        <div class="col-sm-2">
                                            <button onclick="return BrowseImages('HinhAnh');" type="button" class="btn btn-primary">Upload ảnh</button>
                                        </div>
                                              <div class="col-sm-4">
                                         <span style="color: red;"> (*)Nên sử dụng tool để nén
                                             <br/>
                                             <a href="https://compressor.io/" target="_blank">Click để sử dụng tool nén</a>
                                         </span>
                                    </div>
                                    </div>
                                     <div class="form-group">
                                        <label class="col-sm-2 ">Tên Shop</label>
                                        <div class="col-sm-8">
                                            @Html.TextBoxFor(o => o.TenShop, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(o=>o.TenShop, "", new { @class = "redText" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 ">Địa Chỉ</label>
                                        <div class="col-sm-8">
                                            @Html.TextBoxFor(o => o.DiaChi, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(o=>o.DiaChi, "", new { @class = "redText" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 ">Vị trí</label>
                                        <div class="col-sm-2">
                                            @Html.TextBoxFor(o => o.SapXep, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(o=>o.SapXep, "", new { @class = "redText" })
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-success" style="margin-left: 151px;">Lưu</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}



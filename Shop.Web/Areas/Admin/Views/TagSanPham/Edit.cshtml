@{
    ViewBag.Title = "Sửa tags";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    elementForEditorInstance = "MoTa";
    ckoptions.width = "90%";
    $(function () {
        InstanceCkeditor();
    });
</script>
@model Shop.Model.DanhSachTag
@using (Html.BeginForm("SaveEdit", "TagSanpham", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.HiddenFor(o => o.Id)
   <div id="page-wrapper" style="min-height: 407px;">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header" style="margin: 20px 0 5px;">Danh sách tag sản phẩm</h3>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                  
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-9">
                                <form role="form">
                                     <style>
                                            .redText {
                                                color: red;
                                            }
                                             .col-sm-2 {
                                                color: #337ab7 !important;
                                            }
                                            #cke_MoTa
                                            {
                                                width: 723px !important;
                                            }
                                        </style>
                                    <div class="form-group">
                                        <label class="col-sm-2 ">Tên tag</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(o => o.TenTag, new { @class = "form-control",disabled = "disabled" })
                                            
                                        </div>

                                    </div>
                                    <div class="form-group hidden">
                                        <label class="col-sm-2 ">Tên sản phẩm</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(o => o.IdMenu, new { @class = "form-control" })
                                            
                                        </div>

                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 ">SEO title</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(o => o.SEOtitle, new { @class = "form-control" })
                                           
                                        </div>
                                       </div>
                                    
                                    <div class="form-group">
                                        <label class="col-sm-2 ">SEO Description</label>
                                        <div class="col-sm-10">
                                            @Html.TextAreaFor(o => o.SEODescription,new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-success" style="margin-left: 151px;">Lưu</button>
                                </form>
                            </div>

                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
   
}


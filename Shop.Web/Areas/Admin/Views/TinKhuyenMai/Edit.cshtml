@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model Shop.Model.DetailMenu
@using (Html.BeginForm("SaveEdit", "TinKhuyenMai", FormMethod.Post, new { @class = "form-horizontal" }))
{
     @Html.HiddenFor(o=>o.id_)
    <div id="page-wrapper" style="min-height: 407px;">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Tin khuyến mãi</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <style>
             .col-sm-2 {
                                                color: #337ab7 !important;
                                            }
        </style>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading" style="color: red;">
                        Sửa tin khuyến mãi
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-9">
                                <form role="form">
                                    <div class="form-group">
                                        <label class="col-sm-2 ">Tiêu đề<span style="color: red;"> (tối đa 45 kí tự)</span></label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(o => o.Name, new { @class = "form-control" })
                                        </div>

                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 ">Hình ảnh</label>
                                        <div class="col-sm-8">
                                            @Html.TextBoxFor(o => o.Img, new { @class = "form-control" })

                                        </div>
                                        <div class="col-sm-2">
                                            <button onclick="return BrowseImages('Img');" type="button" class="btn btn-primary">Upload ảnh</button>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 ">Nội dung tóm tắt</label>
                                        <div class="col-sm-10">
                                            @Html.TextAreaFor(o => o.Note, new { @class = "form-control" })
                                        </div>

                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 ">Chi tiết bài viết</label>
                                        <div class="col-sm-10">
                                            @Html.TextAreaFor(o => o.Content, new { @class = "ckeditor" })
                                        </div>

                                    </div>


                                    <button type="submit" class="btn btn-success" style="margin-left: 150px;">Lưu</button>
                                </form>
                            </div>

                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
   
}



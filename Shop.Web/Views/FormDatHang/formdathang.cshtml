@model Shop.Web.Controllers.FormDatHangController.FormOrderSalePage
@using (Html.BeginForm("Submit", "FormDatHang", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div id="UpdatePanel1">
        <div class="box-form">
            <div id="divDong1" class="form-group clearfix">
                <div id="divT1" class="label">Tên của bạn (*)</div>
                <div class="input">
                    <input type="text" id="Name" name="Name" class="form-control" style="height: 25px;">
                    <input type="hidden" name="Barcode" value="@Model.Barcode" />
                </div>
            </div>
            <div id="divDong2" class="form-group clearfix">
                <div id="divT2" class="label">Số điện thoại (*)</div>
                <div class="input">
                    <input type="text" id="Phone" name="Phone" class="form-control" style="height: 25px;">
                </div>
            </div>
            <div id="divDong3" class="form-group clearfix">
                <div id="divT3" class="label">Địa chỉ</div>
                <div class="input">
                    <input type="text" id="Adress" name="Adress" class="form-control" style="height: 25px;">
                </div>
            </div>
            <div id="divDong7" class="form-group clearfix">
                <div id="divT7" class="label">Ghi chú</div>
                <div class="input">
                    <textarea rows="2" cols="20" id="Note1" name="Note" class="form-control" style="height: 69px;"></textarea>
                </div>
            </div>
            <div class="form-group clearfix">
                <div class="label">
                </div>
                <div class="input">
                    <div style="width: 100%; text-align: center">
                        <div id="UpdateProgress1" style="display: none;">
                            <strong style="color: Red">Đang xử lý</strong> ...
                            <img src="http://hdnet.com.vn/imgpublic/spinner.gif">
                        </div>
                    </div>
                    <button type="submit" name="submit" class="btn-1" style="height: 33px;">Gửi</button>
                </div>
            </div>
        </div>
    </div>
}


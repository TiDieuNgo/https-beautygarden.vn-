    $("#keySearch").on('click',
        function() {
            if ($("#keySearch").val().length == 0) {
                if (clicksearch == 0) {
                    $.post("/Home/GetTopSearch",
                        {
                        },
                        function(data) {
                            if (data.status) {
                                $('#ui-top-search li').remove();
                                var html =
                                    '<span class="popular-search-title search_smart" id="xuhuong">Xu hướng tìm kiếm</span>';
                                for (var i = 0; i < data.data.length; i++) {
                                    html += '<li class="search_li ui-menu-item search_top10">' +
                                        '<a class="search_li ui-menu-item search_li" href="https://beautygarden.vn/tim-kiem.html?keyword=' +
